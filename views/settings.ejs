<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="style/style.css">
        <link rel="icon" type="image/png" href="img/cast_favicon.png" />
    </head>
    <body>
	<div id="container">
		<div id="header">
			<h1>
				webCast configuration page
			</h1>
		</div>
		<div id="content-container">
			<div id="content">
				<form name="myForm" onsubmit="return validateForm()" action="/editsettings" method="POST">
					<input type="submit" value="Submit">
					<fieldset>
						<legend>Driving Control mode:</legend>
						<input type="radio" id="tankControl" name="control_mode" value="tank" <% if(control_mode == "tank") {%> checked <% } %> >Tank
						<input type="radio" id="polarControl" name="control_mode" value="polar" <% if(control_mode == "polar") {%> checked <% } %> >Polar
					</fieldset>
					<fieldset>
						<legend>Camera control :</legend>
						<input type="radio" id="joyControl" name="acc_camera_mode" value="true" <% if(acc_mode == "true") {%> checked <% } %> >Accelerometer
						<input type="radio" id="accControl" name="acc_camera_mode" value="false" <% if(acc_mode == "false") {%> checked <% } %> >Joystick
					</fieldset>
					<fieldset>
						<legend>Profile selection :</legend>
						<input id='driverh'  type='hidden' value='false' name='userSelectionDriver'>
						<input type="checkbox" id="driver" name="userSelectionDriver" value="true" <% if(driver == "true") {%> checked <% } %> >Cast Driver
						<input id='cameramanh'  type='hidden' value='false' name='userSelectionCameraman'>
						<input type="checkbox" id="cameraman" name="userSelectionCameraman" value="true" <% if(cameraman == "true") {%> checked <% } %> >Cameraman
					</fieldset>
					<iframe src="http://192.168.10.1:8080/panel" width="600" height="800"></iframe>
					<input type="submit" value="Submit">
				</form> 
			</div>
			<script type="text/javascript">
				function validateForm(){

    				if (document.getElementById('driver').checked) {
        				document.getElementById('driverh').disabled = true;
   					};
   					if (document.getElementById('cameraman').checked) {
   						document.getElementById('cameramanh').disabled = true;
   					};
   					return true;
				}
			</script>
			<div id="footer">
				Copyright Â© webCast 2015
			</div>
		</div>
	</div>
    </body>
 </html>

